{
    /*Editor Setup*/
    "editor.fontSize": 18,
    "editor.fontFamily": "Fira Code, Source Code Pro",
    "editor.fontWeight": "450", //more-than normal
    "editor.fontLigatures": true,
    "editor.fontVariations": false, // normal = 400, bold = 500
    "editor.minimap.enabled": true,
    "editor.wordWrap": "on",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope" : "comment",
                "name": "_Git",
                "settings": {
                    "foreground": "#ff00ff8f",
                    "fontStyle": "italic",
                }
            }
        ]
    },
    /*Cursor*/
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    /*Terminal Setup*/
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.fontFamily": "Source Code Pro, Fira Code",
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.fontWeight": "450",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.autoReplies": {},
    "terminal.integrated.mouseWheelScrollSensitivity": 1,
    "terminal.integrated.localEchoStyle": "dim",
    
    /*Debug Console*/
    "debug.console.fontSize": 17,
    "debug.allowBreakpointsEverywhere": true,
    /*Code runner pack*/
    "code-runner.runInTerminal": true,
    "code-runner.ignoreSelection": true,
    "code-runner.preserveFocus": false,
    "code-runner.executorMap": {
        "javascript": "node",
        "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
        "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "php": "php",
        "python": "python -u",
        "ruby": "ruby",
        "go": "go run",
        "powershell": "powershell -ExecutionPolicy ByPass -File",
        "shellscript": "bash",
        "csharp": "scriptcs",
        "vbscript": "cscript //Nologo",
        "typescript": "ts-node",
        "swift": "swift",
        "r": "Rscript",
        "dart": "dart",
    },
    /*IDE System*/
    "files.autoSave": "afterDelay",
    "editor.codeActionsOnSave": {},
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {
        "*.exe": "default"
    },
}